<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chat</h3>
    <form method="GET" action="/chats/new">
        <button>New Chat</button>
    </form>
    <br>
    <% for(let chat of allchat) { %>
        <div class="chat">
            <p>From : <%= chat.from %></p>
            <div class="msg">
                <p>Message : <%= chat.msg %></p>
            </div>
            <p>To : <%= chat.to %></p>
            <!-- <p>Date : <%= chat.date %></p> -->
        </div>
        <hr>
        <br>
        <br>
    <% } %>
</body>
</html>
